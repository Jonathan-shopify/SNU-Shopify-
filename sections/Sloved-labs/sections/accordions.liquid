<div class="accordion-block">
  {% for block in section.blocks %}
    <div class="accordion-section">
   <!-- {% if forloop.first %}  -->
      <div class="ingre-image">
 <img class="lazyloaded1" src="{{ block.settings.mobile_image | img_url: '400x' }}" alt="{{ block.settings.mobile_image }}">
       
     <!-- <img src="https://cdn.shopify.com/s/files/1/0777/0718/2389/files/ingredients.png?v=1695599119"> -->
      </div>
    <!-- {% endif %}  -->
    
      {% if block.settings.acc_title != '' %}
        <a class="accordion-title" href="#acc_{{ block.id }}">{{ block.settings.acc_title }}</a>
          <div id="acc_{{ block.id }}" class="accordion-content">
          {{ block.settings.acc_content }}
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>
{% schema %}
{
  "name": "Accordions",
  "settings": [],
  "blocks": [
    {
    "type": "block",
    "name": "Accordions",
    "settings": [
      {
        "type": "text",
        "id": "acc_title",
        "label": "Accordion title",
        "default": "Accordion title"
      },
      {
        "type": "textarea",
        "id": "acc_content",
        "label": "Accordion content",
        "default": "<p>Accordion content</p>"
      },
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "image"
          }
      
    ]
  }
  ],
  "presets": [
    {
      "name": "Accordions",
      "settings": {
      }
    }
  ]
}
{% endschema %}

